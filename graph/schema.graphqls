# GraphQL schema example
#
# https://gqlgen.com/getting-started/

type Plug {
  id: ID!
  name: String!
  ipAddress: String!
  powerToTurnOff: Float!
  createdAt: String!
}

input NewPlug {
  name: String!
  ipAddress: String!
  powerToTurnOff: Float!
}

type Query {
  listPlugs(page: Int, perPage: Int): [Plug!]!
}

type Mutation {
  createPlug(input: NewPlug!): Plug!
}
